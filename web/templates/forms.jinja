{#
  vi: ft=htmldjango
#}

{% macro input_is_valid(form_input) %}
  <div class="mb-3">
    {{ form_input.label(class="form-label") }}
    {{ form_input(class="form-control is-valid") }}
    {% for error in form_input.errors %}
      <div class="form-text text-danger">{{ error|safe }}</div>
    {% endfor %}
  </div>
{% endmacro %}

{% macro input_with_invalid(form_input) %}
  <div class="mb-3">
    {{ form_input.label(class="form-label") }}
    {{ form_input(class="form-control" + (" is-invalid" if form_input.errors else "")) }}
    {% for error in form_input.errors %}
      <div class="form-text text-danger">{{ error|safe }}</div>
    {% endfor %}
  </div>
{% endmacro %}

{% macro input_with_invalid_and_valid(form_input) %}
  <div class="mb-3">
    {{ form_input.label(class="form-label") }}
    {{ form_input(class="form-control" + (" is-invalid" if form_input.errors else "") + (" is-valid" if not form_input.errors and validated else "")) }}
    {% for error in form_input.errors %}
      <div class="form-text text-danger">{{ error|safe }}</div>
    {% endfor %}
  </div>
{% endmacro %}

{% macro input(form_input) %}
  <div class="mb-3">
    {{ form_input.label(class="form-label") }}
    {{ form_input(class="form-control") }}
  </div>
{% endmacro %}

{% macro textarea(form_input, rows=16) %}
  <div class="mb-3">
    {{ form_input.label(class="form-label") }}
    {{ form_input(class="form-control", rows=rows) }}
  </div>
{% endmacro %}

{% macro input_check(form_input) %}
  <div class="form-check mb-3">
    {{ form_input(class="form-check-input") }}
    {{ form_input.label(class="form-check-label") }}
  </div>
{% endmacro %}

{% macro input_check_with_description(form_input, description) %}
  <div class="form-group mb-3">
    <div class="form-check">
      {{ form_input(class="form-check-input") }}
      {{ form_input.label(class="form-check-label") }}

      <a class="text-dark" data-toggle="tooltip" data-placement="right" title="{{ description }}">
        <i class="fa fa-info-circle"></i>
      </a>
    </div>
  </div>
{% endmacro %}

{% macro submit_submit() %}
  <button type="submit" class="btn btn-primary">
    Submit
  </button>
{% endmacro %}

{% macro submit_save() %}
  <button type="submit" class="btn btn-primary">
    <i class="fa fa-save"></i>
    Save
  </button>
{% endmacro %}

{% macro submit_add() %}
  <button type="submit" class="btn btn-primary">
    <i class="fa fa-plus"></i>
    Add
  </button>
{% endmacro %}

{% macro submit_create() %}
  <button type="submit" class="btn btn-primary">
    <i class="fa fa-plus-square"></i>
    Create
  </button>
{% endmacro %}

{% macro submit_search() %}
  <button type="submit" class="btn btn-primary">
    <i class="fa fa-search"></i>
    Search
  </button>
{% endmacro %}

{% macro input_hidden(form_input) %}
  {{ form_input(hidden=True) }}
{% endmacro %}
